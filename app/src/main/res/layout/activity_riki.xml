
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".riki"
    android:id="@+id/xuandao"
    android:background="@drawable/hqdefault"
    >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:id="@+id/riki"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom|top"
            android:columnCount="2"
            android:rowCount="3"
            android:columnOrderPreserved="false"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:useDefaultMargins="true"
            android:id="@+id/xuandao1"
            android:background="@drawable/r"

            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:background="#6bff2f"
                android:contentDescription="" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:background="#ff4d54" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3"
                android:background="#3539ff" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:background="#fefff8" />

        </GridLayout>

        <GridLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center|bottom|top"
            android:columnCount="2"
            android:rowCount="2"
            android:columnOrderPreserved="false"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="#882cdbff"
            android:useDefaultMargins="true"
            android:id="@+id/xuandao2">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:background="#6bff2f" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:background="#ff4d54" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3"
                android:background="#3539ff" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4"
                android:background="#fefff8" />
        </GridLayout>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="le xuan dao"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="Le xuan dao"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingLeft="20dp" />

    </GridLayout>
</RelativeLayout>
